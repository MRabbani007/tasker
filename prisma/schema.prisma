generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String               @id @default(uuid())
  email               String               @unique
  password            String
  firstName           String
  dateOfBirth         DateTime?
  lastName            String?
  role                UserRole             @default(USER)
  isActive            Boolean              @default(true)
  tasks               Task[]
  taskLists           TaskList[]
  notes               Note[]
  journalEntries      JournalEntry[]
  //
  // Time stamps
  //
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  // 
  // Relations
  //
  sessions            Session[]
  passwordResetTokens PasswordResetToken[]
}

enum UserRole {
  USER
  ADMIN
  EDITOR
}

model Session {
  id           String    @id @default(uuid())
  sessionToken String    @unique
  isActive     Boolean   @default(true)
  expires      DateTime?
  ipAddress    String?
  userAgent    String?
  //
  // Time stamps
  //
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  // 
  // Relations
  //
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  tokenHash String    @unique
  expires   DateTime
  usedAt    DateTime?
  //
  // Time stamps
  //
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // 
  // Relations
  //
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id               String    @id @default(uuid())
  title            String?
  task             String?
  details          String?
  notes            String?
  priority         Int       @default(1)
  color            String?
  link             String?
  linkText         String?
  sortIndex        Int       @default(0)
  plannerSortIndex Int       @default(0)
  tags             Tag[]
  completed        Boolean   @default(false)
  status           String?
  dueOn            DateTime?
  dueAt            DateTime?
  completedAt      DateTime?
  deletedAt        DateTime?
  //
  // Time stamps
  //
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  //
  // Relations
  //
  user             User?     @relation(fields: [userId], references: [id])
  userId           String?
  taskList         TaskList? @relation(fields: [taskListId], references: [id])
  taskListId       String?
}

model Tag {
  id     String  @id @default(uuid())
  name   String
  task   Task?   @relation(fields: [taskId], references: [id])
  taskId String?
}

model TaskList {
  id        String    @id @default(uuid())
  title     String?
  subtitle  String?
  details   String?
  status    String?
  type      String?
  icon      String?
  color     String?
  sortIndex Int       @default(0)
  pinnedAt  DateTime?
  deletedAt DateTime?
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  tasks     Task[]
  //
  // Time stamps
  //
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Note {
  id        String    @id @default(uuid())
  title     String?
  details   String?
  color     String?
  sortIndex Int       @default(0)
  openedAt  DateTime?
  pinnedAt  DateTime?
  deletedAt DateTime?
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model JournalEntry {
  id     String           @id @default(uuid())
  userId String
  type   JournalEntryType

  subject String?
  /// Main visible content
  content String

  /// Optional time inside the day
  occurredOn DateTime?
  occurredAt DateTime?

  /// Ordering within timeline
  sortIndex Int @default(0)

  /// Relations
  taskSnapshot TaskSnapshot?

  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum JournalEntryType {
  TASK
  NOTE
  HIGHLIGHT
  ROUTINE
  REFLECTION
}

model TaskSnapshot {
  id String @id @default(uuid())

  journalEntryId String @unique
  taskId         String // original task ID

  /// Task state at completion time
  title    String
  listName String?
  priority Int?
  tags     String[] // denormalized for history safety

  /// Optional reflection
  note String?

  journalEntry JournalEntry @relation(fields: [journalEntryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}
